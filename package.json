  "repository": {
    "type": "git",
    "url": "git+https://github.com/KabulSquad/typescript-module-template.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "node-module",
    "typescript-module",
    "nodejs-module",
    "library",
    "template",
    "template-project",
    "template-module"
  ],
  "bugs": {
    "url": "https://github.com/KabulSquad/typescript-module-template/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  }
