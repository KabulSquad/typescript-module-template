  "homepage": "https://github.com/KabulSquad/typescript-module-template#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc --build",
